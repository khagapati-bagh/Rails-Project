}
.footer a:hover
{
  
  color: #000;
}


@media (max-width: 1000px)
{
  header{
    padding: 0 20px;

  }
  .menu-toggle
  {
    display: block;
  }
  header nav{
    
    position: absolute;
    width: 100%;
    height: calc(100vh-50px);
    background: #333;
    top: 100%;
    left: -100%;
    transition: 1s;
  }
  header nav.active
  {
    left: 0;
  }
  header nav ul
  {
    display: block;
    text-align: center;
  }
  header nav ul li a{
    border-bottom: 1px solid rgba(0,0,0,2);
  }

  header nav ul li.active ul
  {
    position: relative;
    background:#003e6f;

  }
    header nav ul li ul li
  {
    width: 100%;
  }
   .search
  {
    
    position: relative;
    margin-bottom: 8%;
    width: 95%;
    

  }
  
  .hide_image
  {
    display: none;
  }
  .logo
  {
    font-size:85%; 
    font-style: Serif;  
    text-align: center;
    font-family: "Times New Roman" ,Times, serif; 
    font-weight: bold;
  }
  .logo_img
  {
    width:60px; 
    height: 60px;
  }
}
